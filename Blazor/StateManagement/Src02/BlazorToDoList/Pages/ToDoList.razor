@page "/todolist"
@using BlazorToDoList.Models
@using BlazorToDoList.Components


<h1>ToDo List</h1>


<CascadingValue name="todoList" Value=@todolist>
    <ToDoListComponent />
    <ToDoFormComponent OnToDoListChanged="ToDoListChangedHandler"/>
</CascadingValue>


@code {
    private List<ToDoItem> todolist = new List<ToDoItem>();

    private void ToDoListChangedHandler(ToDoItem toDoItem)
    {
        todolist.Add(toDoItem);
    }
}
