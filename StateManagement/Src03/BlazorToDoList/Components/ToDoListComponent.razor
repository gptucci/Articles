@using BlazorToDoList.Models
@inject ToDoListStateContainer todoliststatecontainer

@if (todoliststatecontainer.todoitemlist.Count() <= 0)
{
    <p><em>Nessun item</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th>DueDate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var todoitem in todoliststatecontainer.todoitemlist)
            {
                <tr>
                    <td>@todoitem.Description</td>
                    <td>
                        @(todoitem.DueDate?.ToShortDateString() ?? string.Empty)
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
@code {
    
    
    protected override void OnInitialized()
    {
        todoliststatecontainer.OnToDoListChanged += this.StateHasChanged;
    }

}
